---
// src/components/CtaBanner.astro
export interface Props {
  headline?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  headline = "LET'S BUILD TOGETHER<br />AND TURN<br />YOUR VISION TO LIFE.",
  ctaText = "Get in touch",
  ctaLink = "/contact", // Assuming a contact page will exist
} = Astro.props;
---

<section class="cta-banner-section">
  <div class="container">
    <h2 class="cta-banner-headline" set:html={headline} />
    {
      ctaText && ctaLink && (
        <a href={ctaLink} class="cta-button cta-banner-button">
          {ctaText}
        </a>
      )
    }
  </div>
</section>

<style>
  .cta-banner-section {
    padding: calc(var(--spacing-unit, 8px) * 6) 0; /* Adjust padding as needed */
    background-color: var(
      --cta-banner-bg,
      var(--background-color, #fff)
    ); /* Or a subtle different bg */
    text-align: center;
    max-width: 60vw;
    margin: auto;
  }
  
  .container {
    margin-top: 8rem;
    margin-bottom: 8rem;
  }

  .cta-banner-headline {
    font-family: var(
      --font-family-heading,
      "Helvetica Neue",
      Helvetica,
      Arial,
      sans-serif
    );
    font-size: clamp(2rem, 4.5vw, 6rem); /* Large, impactful text */
    font-weight: 400; /* Matches Hero's headline weight */
    line-height: 1.2;
    letter-spacing: -0.02em; /* Matches Hero's headline */
    margin-bottom: calc(var(--spacing-unit, 8px) * 3);
    color: var(--text-color, #000000); /* Black text as per Figma */
    text-transform: uppercase;
  }

  .cta-banner-button.cta-button {
    display: inline-block;
    background-color: transparent;
    color: var(--text-color, #000000); /* Black text */
    padding: calc(var(--spacing-unit) * 2) calc(var(--spacing-unit) * 4); /* Approx 16px 32px */
    border: 1px solid var(--text-color, #000000); /* Black border */
    border-radius: var(--button-border-radius, 100px); /* Pill shape */
    text-decoration: none;
    font-weight: 600; /* Placeholder for "65 Medium" */
    font-size: 1rem; /* 16px */
    transition:
      background-color 0.3s ease,
      color 0.3s ease;
  }

  .cta-banner-button.cta-button:hover {
    background-color: var(
      --text-color,
      #000000
    ); /* Black background on hover */
    color: var(--background-color, #ffffff); /* White text on hover */
  }
</style>
