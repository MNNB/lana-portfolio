---
// src/components/SkillsSection.astro

interface Skill {
  name: string;
  description?: string; // Optional description or level
}

// Based on Figma node 344-219, design tools are listed
// The Figma shows design software tools used by Lanyan
const defaultSkills: Skill[] = [
  {
    name: "Photoshop",
    description: "Photo editing, retouching, and digital composition"
  },
  {
    name: "Illustrator",
    description: "Vector graphics, logo design, and illustration"
  },
  {
    name: "Indesign",
    description: "Layout design for print and digital publications"
  },
  {
    name: "After Effect",
    description: "Motion graphics and visual effects"
  },
  {
    name: "Figma",
    description: "UI/UX design, prototyping, and collaboration"
  },
  {
    name: "Davinci",
    description: "Video editing and color grading"
  }
];

export interface Props {
  title?: string;
  skills?: Skill[];
}

const { title = "My design tools", skills = defaultSkills } = Astro.props;
---

<section class="skills-section">
  <div class="container">
    <h2 class="section-title">{title}</h2>
    <div class="skills-list">
      {skills.map(skill => (
        <div class="skill-item">
          <h3 class="skill-name">{skill.name.toUpperCase()}</h3>
          {skill.description && <p class="skill-description">{skill.description}</p>}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .skills-section {
    padding: calc(var(--spacing-unit, 8px) * 4) 0;
    /* background-color: var(--section-bg-alternate, #f9f9f9); */ /* Optional alternate bg */
  }

  .section-title {
    font-family: var(--font-family-heading);
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    text-align: left; /* Figma shows this title left-aligned */
    margin-bottom: calc(var(--spacing-unit, 8px) * 4);
    color: var(--text-color);
    text-transform: uppercase;
  }

  .skills-list {
    display: grid;
    gap: calc(var(--spacing-unit, 8px) * 4);
  }

  /* Figma shows a multi-column layout for skills, perhaps 2 or 3 columns */
  @media (min-width: var(--breakpoint-sm, 576px)) {
    .skills-list {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (min-width: var(--breakpoint-lg, 992px)) {
    .skills-list {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .skill-item {
    /* No specific card styling, just text blocks */
  }

  .skill-name {
    font-family: var(--font-family-heading);
    font-size: 1.1rem; /* Adjust based on Figma */
    font-weight: 600; /* Medium-Bold */
    margin-bottom: calc(var(--spacing-unit, 8px) * 1);
    color: var(--text-color);
    /* text-transform: uppercase; already handled in template */
  }

  .skill-description {
    font-family: var(--font-family-sans-serif);
    font-size: 0.95rem;
    line-height: 1.7;
    color: var(--secondary-text-color, #555);
  }
</style>