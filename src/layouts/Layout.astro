---
// src/layouts/Layout.astro
import '../styles/global.css'; // Import global styles

// Import Header and Footer components
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
	description?: string;
}

const {
	title = 'Graphic Designer Portfolio',
	description = 'A portfolio website for a talented graphic designer.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Brawler:wght@400;700&family=Raleway:ital,wght@0,100..900;1,100..900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">
		<title>{title}</title>

		<!-- Preconnect to Google Fonts if you plan to use them -->
		<!--
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=YourChosenFont&display=swap" rel="stylesheet">
		-->

		<!-- Add any other head elements here, like analytics scripts -->
	</head>
	<body>
		<Header />

		<main>
			<slot /> <!-- Page-specific content will be injected here -->
		</main>

		<Footer />

		<!-- Add global scripts here if needed -->
		<!-- <script>
			// Example global script
			console.log("Layout script loaded");
		</script> -->
	</body>
</html>

<style is:global>
	/* Styles specific to the layout can go here, but prefer global.css for general styles */
	body {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	main {
		flex-grow: 1; /* Ensures main content takes up available space, pushing footer down */
	}
</style>
