---
// src/pages/about.astro
import Layout from "../layouts/Layout.astro";
import AboutIntroSection from "../components/AboutIntroSection.astro";
import TimelineSection from "../components/TimelineSection.astro";
import type { TimelineItem } from "../components/TimelineSection.astro";

const pageTitle = "About | Graphic Designer";
const pageDescription =
  "Learn more about my journey, skills, and design philosophy as a professional graphic designer.";

const experienceItems: TimelineItem[] = [
  {
    dateRange: "Oct 2020 - Present",
    title: "Freelance Senior Art Director",
    institution: "Paris",
    description:
      "Working with various clients on branding, packaging, and design projects.",
  },
  {
    dateRange: "Mai 2024 - January 2025",
    title: "Freelance photo retoucher",
    institution: "Moet Hennessy, Paris",
    description: "Photo retouching for luxury brands.",
  },
  {
    dateRange: "Mai 2022 - Aug 2022",
    title: "Packaging Art Director",
    institution: "Surf Design, Paris",
    description: "Specialized in packaging design for various clients.",
  },
  {
    dateRange: "Jan 2019 - April 2020",
    title: "Senior Art Director",
    institution: "Motor Brand Design, Melbourne",
    description:
      "Led design projects for Australian and international clients.",
  },
  {
    dateRange: "July 2017 - June 2018",
    title: "Art Director",
    institution: "Hotshop, Paris",
    description: "Worked on branding and design projects for various clients.",
  },
  {
    dateRange: "Jan 2016 - July 2017",
    title: "Freelance Art Director",
    institution: "Paris",
    description: "Independent design work for various clients.",
  },
  {
    dateRange: "Dec 2012 - Nov 2015",
    title: "Senior Designer",
    institution: "NeochaEDGE, Shanghai",
    description: "Design work for Chinese and international clients.",
  },
  {
    dateRange: "August 2011 - Dec 2011",
    title: "Intern Junior Art Director",
    institution: "Adoc design, Paris",
    description: "Internship focusing on design fundamentals and client work.",
  },
];

const educationItems: TimelineItem[] = [
  {
    dateRange: "Mai 2024",
    title: "Professional training UI designer",
    institution: "Labtop / Paris",
    description: "Specialized training in UI design principles and practices.",
  },
  {
    dateRange: "Nov 2022 - January 2023",
    title: "Professional training Motion Graphic",
    institution: "Les Gobelins / Paris",
    description: "Advanced training in motion graphics and animation.",
  },
  {
    dateRange: "2012 July",
    title: "Visual communication",
    institution: "Intuit Lab / Master's Degree / Paris",
    description: "Master's degree in visual communication.",
  },
  {
    dateRange: "2011 July",
    title: "Visual communication",
    institution: "ECV / Bac+3 / Paris",
    description: "Bachelor's level education in visual communication.",
  },
  {
    dateRange: "2007 July",
    title: "Fine arts / Illustration",
    institution: "Beihang University / Bachelor Degree / Beijing",
    description: "Bachelor's degree focusing on fine arts and illustration.",
  },
];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="page-header-container container">
    <h1 class="page-main-title">/ABOUT</h1>
  </div>

  <AboutIntroSection />

  <div class="about-details-grid container">
    <div class="experience-column">
      <TimelineSection sectionTitle="Experiences" items={experienceItems} />
    </div>
    <div class="education-tools-column">
      <TimelineSection
        sectionTitle="Education / Professional Training"
        items={educationItems}
      />
      <div class="my-design-tools">
        <h3 class="section-subtitle">My design tools</h3>
        <ul>
          <li>Photoshop</li>
          <li>Illustrator</li>
          <li>Indesign</li>
          <li>After effect</li>
          <li>Figma</li>
          <li>Davinci</li>
        </ul>
      </div>
    </div>
    <div class="references-column">
      <h3 class="section-subtitle">Reference</h3>
      <ul>
        <li>Gap</li>
        <li>Adidas</li>
        <li>Lee</li>
        <li>Nestlé</li>
        <li>Monoprix</li>
        <li>Carrefour</li>
        <li>Lidl / Aldi</li>
        <li>Intermarché</li>
        <li>Auchan</li>
        <li>Brand in China</li>
        <li>Beautiful Scenery</li>
        <li>Lululemon</li>
        <li>Aldi</li>
        <li>Foodbowl</li>
      </ul>
    </div>
  </div>

  <div class="download-folio-section container">
    <a href="/path/to/your/folio.pdf" download class="download-folio-link">
      Download my folio
      <span class="arrow-icon">→</span> {/* Simple arrow, replace with SVG if preferred */}
    </a>
  </div>

  <div class="about-footer-contact container">
    <p class="concluding-paragraph">
      If you're interested in learning more about my services, discussing
      collaboration or a potential project, or just want to chat about design
      and creativity, I'm here to listen.
    </p>
    <div class="contact-links">
      <a
        href="https://www.linkedin.com"
        target="_blank"
        rel="noopener noreferrer">Linkedin</a
      >
      <a
        href="https://www.instagram.com"
        target="_blank"
        rel="noopener noreferrer">Instagram</a
      >
      <span>hu.lanyan@gmail.com</span>
      <span>+33 6 5683 4241</span>
    </div>
  </div>
</Layout>

<style>
  .page-header-container {
    padding-top: calc(var(--spacing-unit, 8px) * 4);
    padding-bottom: calc(var(--spacing-unit, 8px) * 2);
    text-align: left; 
  }

  .page-main-title {
    font-family: "Monument Grotesk", var(--font-family-heading);
    font-size: 48px; 
    font-weight: 400; 
    line-height: 60px; 
    color: var(--text-color, #000); 
    text-transform: uppercase; 
    margin-bottom: calc(var(--spacing-unit, 8px) * 2); 
  }

  .container > p {
    margin-bottom: 0.5rem;
  }
  .container ul {
    margin-left: 1.5rem; 
    margin-bottom: 1rem;
  }

  .about-details-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: calc(var(--spacing-unit, 8px) * 4);
    margin-top: calc(var(--spacing-unit, 8px) * 6);
    margin-bottom: calc(var(--spacing-unit, 8px) * 6);
  }

  @media (min-width: 768px) {
    .about-details-grid {
      grid-template-columns: 1fr 1fr 0.8fr; 
      gap: calc(var(--spacing-unit, 8px) * 5); 
    }
  }

  .section-subtitle {
    font-family: "Monument Grotesk", var(--font-family-body);
    font-size: 20px; 
    font-weight: 700; /* Bold */
    color: var(--text-color, #000);
    margin-bottom: calc(var(--spacing-unit, 8px) * 2); 
    text-transform: none; /* Figma uses natural casing */
  }

  .my-design-tools,
  .references-column {
    padding-top: calc(var(--spacing-unit, 8px) * 0);
  }

  .my-design-tools ul,
  .references-column ul {
    list-style: none;
    padding-left: 0;
    margin-left: 0; 
  }

  .my-design-tools ul li,
  .references-column ul li {
    font-family: "Roboto Mono", var(--font-family-body);
    font-size: 14px; 
    color: var(--text-color, #000);
    margin-bottom: calc(var(--spacing-unit, 8px) * 0.5); 
    line-height: 24px; 
  }

  .my-design-tools {
    margin-top: calc(var(--spacing-unit, 8px) * 4);
  }

  .download-folio-section {
    padding-top: calc(var(--spacing-unit, 8px) * 4);
    padding-bottom: calc(var(--spacing-unit, 8px) * 4);
    text-align: left; /* Assuming left alignment from Figma */
  }

  .download-folio-link {
    font-family: "Monument Grotesk", var(--font-family-sans-serif); /* Figma: Monument Grotesk */
    font-size: 20px; /* Figma: 20px */
    font-weight: 700; /* Figma: Bold */
    color: var(--text-color, #000); /* Figma: Black */
    text-decoration: none;
    display: inline-flex; /* To align text and arrow */
    align-items: center;
  }

  .download-folio-link .arrow-icon {
    margin-left: calc(var(--spacing-unit, 8px) * 1);
  }

  .about-footer-contact {
    border-top: 1px solid var(--border-color, #e0e0e0); 
    padding-top: calc(var(--spacing-unit, 8px) * 4);
    padding-bottom: calc(var(--spacing-unit, 8px) * 4);
    margin-top: calc(var(--spacing-unit, 8px) * 2); 
    text-align: left; 
  }

  .about-footer-contact .concluding-paragraph { 
    font-family: "Monument Grotesk", var(--font-family-body);
    font-size: 20px; 
    font-weight: 700; 
    line-height: 24px; 
    color: var(--text-color, #000); 
    margin-bottom: calc(var(--spacing-unit, 8px) * 3);
    max-width: 60ch; 
  }

  .about-footer-contact .contact-links {
    display: flex;
    flex-wrap: wrap;
    gap: calc(var(--spacing-unit, 8px) * 2) calc(var(--spacing-unit, 8px) * 4); 
    font-family: "Brawler", var(--font-family-body); /* Figma: Brawler Regular */
    font-size: 14px; /* Figma: 14px */
  }

  .about-footer-contact .contact-links a,
  .about-footer-contact .contact-links span {
    color: var(--text-color, #000); /* Figma: Black */
    text-decoration: none;
  }

  .about-footer-contact .contact-links a:hover {
    text-decoration: underline;
  }
</style>
